@model IEnumerable<CourseListingServiceModel>

@{
    ViewData["Title"] = "Courses";
}

<h2>My Courses</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var course in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.EndDate)
            </td>
            @{ 
                var routeValue = new Dictionary<String, String>() { ["courseId"] = course.Id.ToString() };
            }
            <td>
                <a asp-action="Students" asp-all-route-data="routeValue" class="btn btn-default">Students</a>
            </td>
        </tr>
}
    </tbody>
</table>
